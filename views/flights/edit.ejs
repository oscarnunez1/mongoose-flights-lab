<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/edit.css" />
<%- include('../partials/nav') %>

<main> 
  <h1><%= title %></h1>
  <form 
    id="new-form" 
    action="/flights/<%= flight._id %>?_method=PUT" 
    method="POST"
  >
    <label for="airline-input">Airline:</label>
    <input type="text" name="airline" value="<%= flight.airline %>" id="airline-input">
    <label for="airport-select">Airport:</label>
    <select name="airport" id="airport-select">
      <option value="<%= flight.airport %>"><%= flight.airport %> </option>
      <option value="AUS">AUS</option>
      <option value="DFW">DFW</option>
      <option value="DEN">DEN</option>
      <option value="LAX">LAX</option>
      <option value="SAN">SAN</option>
    </select>
    <label for="flight-number-input">Flight Number</label>
    <input type="number" min="10" max="9999 "name="flightNo" value="<%= flight.flightNo %> "id="flight-number-input" >
    <label for="departs-input">Departs</label>
    <input type="datetime-local" name="departs" value="<%= flight.depart %>" id="departs-input">
    <button type="submit">Save Flight</button>
  </form>
</main>

<%- include("../partials/footer") %>